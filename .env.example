# Xserver環境設定のサンプル
# このファイルを.envにコピーして、実際の値を設定してください

# 環境設定
ENVIRONMENT=production
DEBUG=false

# データベース設定（Xserverの情報に置き換えてください）
DB_HOST=localhost
DB_USER=your_xserver_username
DB_PASSWORD=your_xserver_password
DB_NAME=your_xserver_database
DB_PORT=3306
DB_CHARSET=utf8mb4

# アプリケーション設定
SECRET_KEY=your-secret-key-here-change-this
API_BASE_URL=https://your-domain.com
CORS_ORIGINS=https://your-domain.com

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/home/your_username/logs/app.log