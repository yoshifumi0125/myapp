# XServer環境設定テンプレート
# このファイルを.env.xserverにコピーして、実際の値を設定してください

# 環境設定
ENVIRONMENT=production
DEBUG=false

# XServerデータベース設定
DB_HOST=mysqlXXXX.xserver.jp  # XServerのMySQLホスト名
DB_USER=your_db_user           # データベースユーザー名
DB_PASSWORD=your_db_password   # データベースパスワード
DB_NAME=your_db_name           # データベース名
DB_PORT=3306
DB_CHARSET=utf8mb4

# アプリケーション設定
SECRET_KEY=your-production-secret-key-here
API_BASE_URL=https://your-domain.com

# CORS設定
CORS_ORIGINS=https://your-domain.com

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/home/your_username/logs/app.log