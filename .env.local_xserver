# ローカル開発用XServer DB接続設定（SSHトンネル経由）
ENVIRONMENT=local_xserver
DEBUG=true

# SSHトンネル経由のDB接続
DB_HOST=127.0.0.1
DB_PORT=3307
DB_USER=yoshifumik_1lt67
DB_PASSWORD=yoshi2003
DB_NAME=yoshifumik_sass1
DB_CHARSET=utf8mb4

# アプリケーション設定
SECRET_KEY=local-development-key
API_BASE_URL=http://localhost:8080

# CORS設定
CORS_ORIGINS=http://localhost:8080,http://localhost:3000